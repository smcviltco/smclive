                    <!--        <xpath expr="//div[@class='page']" position="replace">-->
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2 class="mt16">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Order #</span>
                                <span t-if="doc.state in ['draft','sent']">Quotation #</span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice #</span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>
                        <div class="row">
                            <div class="col-7">
                                <span class="p1">
                                    <strong>Reference :</strong>
                                    <span class="p2" t-field="doc.name"/>
                                </span>
                                <br/>
                                <spn class="p1">
                                    <strong>Customer :</strong>
                                    <span class="p2" t-field="doc.partner_id.name"/>
                                </spn>
                                <br/>
                                <span class="p1">
                                    <strong>Address :</strong>
                                    <span class="p2" t-field="doc.partner_id.street"/>
                                </span>
                                <br/>
                                <span class="p1">
                                    <strong>Contact :</strong>
                                    <span class="p2" t-field="doc.partner_id.mobile"/>
                                </span>
                                <br/>
                                <spn class="p1">
                                    <strong>Validity :</strong>
                                    <span class="p2" t-field="doc.validity_date"/>
                                </spn>
                                <br/>
                                <spn class="p1">
                                    <strong>Printed By :</strong>
                                    <span class="p2" t-field="user.name"/>
                                </spn>
                            </div>
                            <div class="col-6">
                                <span class="p1">
                                    <strong>Branch :</strong>
                                    <span t-field="doc.branch_id.name"/>
                                </span>
                                <br/>
                                <spna class="p1">
                                    <strong>Date :</strong>
                                    <span class="p2" t-field="doc.date_order"/>
                                </spna>
                                <br/>
                                <span class="p1">
                                    <strong>CNIC :</strong>
                                    <span class="p2" t-field="doc.partner_id.no_cnic"/>
                                </span>
                                <br/>
                                <span class="p1">
                                    <strong>NTN :</strong>
                                    <span class="p2" t-field="doc.partner_id.ntn"/>
                                </span>
                                <br/>
                                <span class="p1">
                                    <strong>Print Date :</strong>
                                    <span class="p2" t-esc="doc.get_print_date()"/>
                                </span>
                            </div>
                        </div>
                        <br/>

                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                        <table class="table table-sm o_main_table">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr>
                                    <th style="border : 1px solid black;" class="text-center">
                                        <strong>Sr</strong>
                                    </th>
                                    <th name="th_description" class="text-left" style="border : 1px solid black;">Item
                                        Description
                                    </th>
                                    <th style="border : 1px solid black;" class="text-center">
                                        <strong>Article</strong>
                                    </th>
                                    <th style="border : 1px solid black;" class="text-center">
                                        <strong>Finish</strong>
                                    </th>
                                    <!--                            <th style="border : 1px solid black;" class="text-center"><strong>SQM/Box</strong></th>-->
                                    <!--                            <th style="border : 1px solid black;" class="text-center"><strong>Total Box</strong></th>-->
                                    <th name="th_quantity" class="text-center" style="border : 1px solid black;">
                                        Quantity
                                    </th>
                                    <th name="th_quantity" class="text-center" style="border : 1px solid black;">UOM
                                    </th>
                                    <th name="th_priceunit" class="text-center" style="border : 1px solid black;">Unit
                                        Price
                                    </th>
                                    <th style="border : 1px solid black;" class="text-center">
                                        <strong>Total</strong>
                                    </th>
                                    <th name="th_taxes" class="text-center" style="border : 1px solid black;">Taxes</th>
                                    <th name="th_discount" t-if="display_discount" class="text-center"
                                        groups="product.group_discount_per_so_line" style="border : 1px solid black;">
                                        <span>Disc.%</span>
                                    </th>

                                    <th name="th_subtotal" class="text-center" style="border : 1px solid black;">
                                        <span groups="account.group_show_line_subtotals_tax_excluded">Net Amount</span>
                                        <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="grandtotal_amount" t-value="0"/>
                                <t t-set="grandtotal_qty" t-value="0"/>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="count_id" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>
                                    <t t-set="grandtotal_amount" t-value="grandtotal_amount + line.price_subtotal"/>
                                    <t t-if="line.product_id.type != 'service'">
                                        <t t-set="grandtotal_qty" t-value="(grandtotal_qty+(line.product_uom_qty))"/>
                                    </t>
                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <t t-set="count_id" t-value="count_id+1"/>
                                            <td name="td_id" class="text-center"
                                                style="height:0%; font-size:13px;border : 1px solid black;">
                                                <t t-esc="count_id"/>
                                            </td>
                                            <td name="td_name" class="text-left"
                                                style="height:0%;border : 1px solid black;">
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td class="div_tb text-center" style=" height:0%;border : 1px solid black;">
                                                <span t-field="line.product_id.article_no"/>
                                            </td>
                                            <td class="div_tb text-center" style="height:0%;border : 1px solid black;">
                                                <span t-field="line.product_id.finish_no"/>
                                            </td>
                                            <!--                                     <td class="div_tb text-center" style="height:0%;border : 1px solid black;">-->
                                            <!--                                        <span t-field="line.sqm_box"/>-->
                                            <!--                                    </td>-->
                                            <!--                                    <td class="div_tb text-center" style="height:0%;border : 1px solid black;">-->
                                            <!--                                        <span t-field="line.total_sqm"/>-->
                                            <!--                                    </td>-->
                                            <td name="td_quantity" style=" height:0%;border : 1px solid black;"
                                                class="text-center">
                                                <span t-field="line.product_uom_qty"/>
                                                <!--                                        <span t-field="line.product_uom"/>-->
                                            </td>
                                            <td name="td_quantity" style=" height:0%;border : 1px solid black;"
                                                class="text-center">
                                                <!--                                        <span t-field="line.product_uom_qty"/>-->
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_priceunit" style=" height:0%;border : 1px solid black;"
                                                class="text-center">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td style=" height:0%;border : 1px solid black;" class="text-center">
                                                <t t-set="net_payable"
                                                   t-value="(line.price_unit * line.product_uom_qty)"/>
                                                <t t-if="line.product_id.type != 'service'">
                                                    <span t-esc="net_payable"
                                                          t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}">
                                                    </span>
                                                </t>
                                            </td>
                                            <td name="td_taxes" style="height:0%;border : 1px solid black;"
                                                class="text-center">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td t-if="display_discount" style=" height:0%;border : 1px solid black;"
                                                class="text-center" groups="product.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>

                                            <td name="td_subtotal" style=" height:0%;border : 1px solid black;"
                                                class="text-center o_price_total">
                                                <span t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded"
                                                      t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}"/>
                                                <span t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included"
                                                      t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 0}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <br/>
                                <!--                        <tr class="text-right" style="padding:0;">-->
                                <!--                            <td style="text-align:right;border : 1px solid black;" colspan="4">-->
                                <!--                                <span>-->
                                <!--                                    <b>Grand Total: </b>-->
                                <!--                                </span>-->
                                <!--                            </td>-->
                                <!--                            <td style="text-align:center;border : 1px solid black;">-->
                                <!--                                <b><t t-esc="grandtotal_qty" /></b>-->
                                <!--                            </td>-->
                                <!--                            <t t-if="not display_discount">-->
                                <!--                                <td colspan="2" style="border : 1px solid black;"/>-->
                                <!--                            </t>-->
                                <!--                            <t t-else="">-->
                                <!--                                <td colspan="3" style="border : 1px solid black;"/>-->
                                <!--                            </t>-->
                                <!--                            <td style="text-align:center;border : 1px solid black;">-->
                                <!--                                <b><t t-esc="grandtotal_amount" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></b>-->
                                <!--                            </td>-->
                                <!--                        </tr>-->
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal" style="">
                                            <td name="td_amount_untaxed_label">
                                                <strong>Gross Total</strong>
                                            </td>
                                            <td name="td_amount_untaxed" class="text-right">
                                                <span t-field="doc.gross_total"
                                                      t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </td>
                                        </tr>
                                        <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                            <tr style="" class="border-black">
                                                <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                    <td name="td_amount_by_group_label_3">
                                                        <strong>GST:</strong>

                                                        <!--                                                        <span t-esc="amount_by_group[0]"/>-->
                                                        <!--                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;-->
                                                        <!--                                                            <t t-esc="amount_by_group[2]"-->
                                                        <!--                                                               t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>-->
                                                        <!--                                                        </span>-->
                                                    </td>
                                                    <td name="td_amount_by_group_3" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td name="td_amount_by_group_label">
                                                        <span>
                                                            <strong>GST:</strong>
                                                        </span>
                                                        <!--                                                        <span t-esc="amount_by_group[0]"/>-->
                                                    </td>
                                                    <td name="td_amount_by_group" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label">
                                                <strong>Discount:</strong>
                                            </td>
                                            <td name="td_amount_total" class="text-right">
                                                <span t-field="doc.line_discount"
                                                      t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label">
                                                <strong>Second Discount:</strong>
                                            </td>
                                            <td name="td_amount_total" class="text-right">
                                                <span t-field="doc.second_discount"
                                                      t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label" style="border-bottom:1px solid black;">
                                                <strong>Total</strong>
                                            </td>
                                            <td name="td_amount_total" class="text-right"
                                                style="border-bottom:1px solid black;">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>

                                    <!--                        <div class="oe_structure"/>-->


                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-left" style="padding-left:0px;width:100%;">
                            <p t-if="doc.note" style="font-weight:bold;color:black; font-size:18px;">Terms And
                                Conditions:
                            </p>
                            <p t-field="doc.note"/>
                        </div>
                        <br/>

                        <table width="100%">
                            <tr class="text-center">
                                <td width="50%">
                                    <span>
                                        <strong>Sales Consultant:</strong>
                                    </span>
                                    <span t-field="doc.user_id.name"/>
                                    <br/>
                                    <span>----------------------------------------------------</span>
                                    <br/>
                                    <span>
                                        <strong>Mobile:</strong>
                                    </span>
                                    <span t-esc="doc.get_mobile(doc.user_id)"/>
                                </td>
                                <td width="50%" class="font-weight-bold">
                                    <!--                                Name: __________________-->
                                </td>
                            </tr>
                            <!--                        <tr>-->
                            <!--                            <td width="50%" class="text-left">_______________</td>-->
                            <!--                            <td width="50%" class="text-right font-weight-bold" style="padding-right:35px;">-->
                            <!--                                Mobile#: __________________-->
                            <!--                            </td>-->
                            <!--                        </tr>-->
                            <!--                        <tr>-->
                            <!--                            &lt;!&ndash;                                        <td width="50%" class="text-left font-weight-bold">Sales Consultant</td>&ndash;&gt;-->
                            <!--                            <td width="50%" class="text-left font-weight-bold"></td>-->
                            <!--                        </tr>-->
                            <!--                        <tr>-->
                            <!--                            <td width="50%" class="text-left font-weight-bold"><span t-field="doc.create_user.partner_id.mobile"/></td>-->
                            <!--                            <td width="50%" class="text-left font-weight-bold"></td>-->
                            <!--                        </tr>-->
                        </table>
                    </div>
                </t>
                <!--            </div>-->
            </t>
        </t>
