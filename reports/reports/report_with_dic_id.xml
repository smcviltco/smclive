<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_with_dic_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .p1{
                        margin-top:-20px;
                        font-size:15px;
                        font-weight:700;

                        }
                        span{
                        margin-top:-20px;
                        font-size:15px;
                        font-weight:normal;
                        }
