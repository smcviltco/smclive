                        <!--                        margin-top:-20px;-->
                        <!--                        font-size:12px;-->


                        <!--                        }-->
                        .pcen{
                        float:right;
                        font-width:bold;
                        }
                        .r1{
                        border:1px solid
                        }
                        .div_headings {
                        border:1px solid;
                        text-align: center;
                        font-size:15px;
                        margin-top:2em;
                        vertical-align:middle;
                        }
                        .div_tb {
                        border:1px solid;
