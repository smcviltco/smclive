<odoo>
    <data>
        <template id="sale_delivery_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <style>
                            .top_general_head {
                            font-weight:bold;
                            }
                            .data_table_heading th {
                            border:2px solid grey;
                            padding-left:2px;
                            }
                            .data_table_body td {
                            border:2px solid grey;
                            padding-left:2px;
                            }
                            .vertical_middle {
                            text-align:center;
                            vertical-align:middle;
                            }
                            .important_note {
                            margin-top:200px;
                            }
                            .container p, h6 {
                            font-weight: bold;
                            }
                            .margin_top {
                            margin-top:-20px;
                            font-size:14px;
                            }
                            .last_table {
                            margin-top:70px;

                            }
                            .bold {
                            font-weight:bold;
                            }
                        </style>
                        <div class="page">
                            <div class="oe_structure"/>
                            <div style="font-size:30px; font-weight: bold;" align="center" t-if="o.picking_type_id.code == 'outgoing'">
                                <strong>Delivery Order</strong>
                            </div>
                            <div style="font-size:30px; font-weight: bold;" align="center" t-if="o.picking_type_id.code == 'incoming'">
                                <strong>Receipt</strong>
                            </div>
                            <div style="font-size:30px; font-weight: bold;" align="center" t-if="o.picking_type_id.code == 'internal'">
                                <strong>Internal Transfer</strong>
                            </div>
                            <br/>
                            <div class="oe_structure"/>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                </div>
                                <div class="col-5" t-if="o.picking_type_id.code == 'outgoing' or o.picking_type_id.code == 'incoming'">
                                    <span>
                                        <strong>Branch:</strong>
                                        <span class="m-0" t-field="o.create_user.branch_id.name"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>D.O No:</strong>
                                    <span class="m-0" t-field="o.name"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Date:</strong>
                                        <span class="m-0" t-field="o.scheduled_date"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6" t-if="o.picking_type_id.code == 'internal'">
                                    <strong>User:</strong>
                                    <span class="m-0" t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-6" t-if="o.picking_type_id.code == 'outgoing' or o.picking_type_id.code == 'incoming'">
                                    <strong>Customer Name:</strong>
                                    <span class="m-0" t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Mobile#:</strong>
                                        <span class="m-0" t-field="o.partner_id.mobile"/>
                                    </span>
                                </div>
                            </div>

                            <div class="row col-12" style="font-size:13px;">
                                <strong>Shipping Address:</strong>
                                <span class="m-0" t-field="o.shipping_address"/>

                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Agent Name:</strong>
                                    <span class="m-0" t-field="o.user_id.name"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Note:</strong>
                                        <span class="m-0" t-field="o.note_del"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6" t-if="o.picking_type_id.code == 'outgoing' or o.picking_type_id.code == 'incoming'">
                                    <strong>Godown:</strong>
                                    <span class="m-0" t-field="o.location_id"/>
                                </div>
                                <div class="col-6" t-if="o.picking_type_id.code == 'internal'">
                                    <strong>From:</strong>
                                    <span class="m-0" t-field="o.location_id"/>
                                </div>
                                <div class="col-6" t-if="o.picking_type_id.code == 'internal'">
                                    <strong>To:</strong>
                                    <span class="m-0" t-field="o.location_dest_id"/>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Driver Name:</strong>
                                    <span class="m-0" t-field="o.driver.name"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Mobile#:</strong>
                                        <span class="m-0" t-field="o.mobile"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Vehicle No:</strong>
                                    <span class="m-0" t-field="o.vehicle_no"/>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Picking Type:</strong>
                                    <span class="m-0" t-field="o.user_picking_type"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Comments:</strong>
                                        <span class="m-0" t-field="o.comments"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Source Document:</strong>
                                    <span class="m-0" t-field="o.origin"/>
                                </div>
                            </div>
                             <div class="row" style="font-size:13px;">
                                <div class="col-6">
                                    <strong>Printed By:</strong>
                                    <span class="m-0" t-esc="user.name"/>
                                </div>
                                <div class="col-5">
                                    <span>
                                        <strong>Print Date:</strong>
                                        <span class="m-0" t-esc="o.get_print_date()"/>
                                    </span>
                                </div>
                            </div>

                            <table class="mt-3" width="100%">
                                <thead class="data_table_heading">
                                    <tr>
                                        <th width="5%" class="text-center">Sr</th>
                                        <th width="25%">Item Description</th>
                                        <th width="10%" class="text-center">Article</th>
                                        <th width="10%" class="text-center">Finish</th>
                                        <th width="10%" class="text-center">SQM/Box</th>
                                        <th width="10%" class="text-center">Total Box</th>
                                        <th width="5%" class="text-center">Unit</th>
                                        <th width="10%" class="text-center">Reserved Qty</th>
                                        <th width="10%" class="text-center">In transit</th>
                                        <th width="10%" class="text-center">Done Qty</th>
                                    </tr>
                                </thead>
                                <!-- here we will apply the loop-->
                                <tbody class="data_table_body">
                                    <t t-set="count_id" t-value="0"/>
                                    <t t-set="total_quantity" t-value="0"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-foreach="o.move_line_ids_without_package" t-as="line">
                                        <t t-set="count_id" t-value="count_id+1"/>
                                        <tr>
                                            <td class="vertical_middle"> <t t-esc="count_id"/> </td>
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td class="text-center"><span t-field="line.product_id.article_no"/></td>
                                            <td class="text-center"><span t-field="line.product_id.finish_no"/></td>
                                            <td class="text-center"><span t-field="line.sqm_box"/></td>
                                            <td class="text-center"><span t-field="line.total_sqm" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></td>
                                            <td class="text-center"><span t-field="line.product_uom_id"/></td>
                                            <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                            <td class="text-center"><span t-field="line.product_uom_qty"/></td>
                                            <td class="text-center"><span t-field="line.qty_done"/></td>
                                            <t t-set="total_quantity" t-value="total_quantity + line.qty_done"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

