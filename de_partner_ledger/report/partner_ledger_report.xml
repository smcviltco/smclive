<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

   <record id="paperformat_partner_ledger"
           model="report.paperformat">
      <field name="name">Partner Ledger A4</field>
      <field name="default" eval="True"/>
      <field name="format">A4</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">65</field>
      <field name="margin_bottom">28</field>
      <field name="margin_left">5</field>
      <field name="margin_right">5</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">60</field>
      <field name="dpi">90</field>
   </record>

   <report id="partner_ledger_pdf"
           string="Partner Ledger Report"
           model="partner.ledger"
           report_type="qweb-pdf"
           file="de_partner_ledger.de_partner_ledger_pdf_report"
           name="de_partner_ledger.de_partner_ledger_pdf_report"
           paperformat="paperformat_partner_ledger"/>
</odoo>
