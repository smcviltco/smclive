<odoo>
    <template id="expense_statement_rep_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h1 class="text-center">Expense Statement Report</h1>
                    <h5 class="text-center"><span t-esc="data['branch_id'][1]"/></h5>

                    <div class="text-left">
                        <p><strong>Date: </strong><span t-esc="data['date_from']" t-options="{'widget': 'date'}"/>  <strong>- </strong><span t-esc="data['date_to']" t-options="{'widget': 'date'}"/></p>
                    </div>

                    <table class="table table-sm" >
                        <th >Date</th>
                        <t t-foreach="accounts" t-as="account">
                            <th class="text-center" t-esc="account.name"/>
                        </t>
                        <t t-foreach="dates" t-as="date">
                            <tr>
                                <td >
                                    <span t-esc="date.strftime('%d/%m/%Y')" class="text-nowrap"/>
                                </td>
                                <t t-foreach="accounts" t-as="account">
                                    <t t-set="total" t-value="get_date_data(date, account)"/>
                                    <td class="text-center">
                                        <span t-esc="'{0:,.1f}'.format(float(total))"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>