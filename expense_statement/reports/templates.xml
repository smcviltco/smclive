    <template id="expense_statement_rep_temp">
        <t t-call="web.html_container">
            <!--            <t t-call="web.external_layout">-->
            <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name"
                 t-att-data-oe-id="doc and doc.id">
                <t t-call="expense_statement.expense_report_header_footer"/>
                <div class="page" style="margin-top:-20px;">
                    <div class="oe_structure"/>
                    <h3 class="text-center">Sale Statement&#160;(<span t-esc="data['branch_id'][1]"/>)</h3>

                    <!--                    <h5 class="text-center"><span t-esc="data['branch_id'][1]"/></h5>-->

                    <div class="text-left">
                        <p><strong>Date: </strong><span t-esc="data['date_from']" t-options="{'widget': 'date'}"/>  <strong>- </strong><span t-esc="data['date_to']" t-options="{'widget': 'date'}"/></p>
                    </div>
                    <t t-set="grand_total_sale" t-value="0"/>
                    <t t-set="grand_total_sale_return" t-value="0"/>
                    <t t-set="grand_total_purchases" t-value="0"/>

                    <table class="table table-sm" style="border:1px solid black;">

                        <th style="border:1px solid black;">Date</th>
                        <th style="border:1px solid black;">Total Sale</th>
                        <th style="border:1px solid black;">Total Return</th>
                        <th style="border:1px solid black;">Total Purchase</th>

                        <t t-foreach="dates" t-as="date">
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;">
                                    <span t-esc="date.strftime('%d/%m/%Y')" class="text-nowrap"/>
                                </td>
                                <t t-set="total_sale" t-value="get_total_sale(date)"/>
                                <td style="border:1px solid black;">
                                    <span t-esc="'{0:,.0f}'.format(float(total_sale))"/>
                                </td>
                                <t t-set="grand_total_sale" t-value="grand_total_sale + float(total_sale)"/>
                                <t t-set="total_sale_return" t-value="get_total_sale_return(date)"/>
                                <td style="border:1px solid black;">
                                    <span t-esc="'{0:,.0f}'.format(float(total_sale_return))"/>
                                </td>
                                <t t-set="grand_total_sale_return" t-value="grand_total_sale_return + float(total_sale_return)"/>

                                <t t-set="total_purchases" t-value="get_total_purchases(date)"/>
                                <td style="border:1px solid black;">
                                    <span t-esc="'{0:,.0f}'.format(float(total_purchases))"/>
                                </td>
                                <t t-set="grand_total_purchases" t-value="grand_total_purchases + float(total_purchases)"/>
                            </tr>
                        </t>
                        <tr>
                            <td><strong>Total</strong></td>
                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_sale))"/></strong></td>
                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_sale_return))"/></strong></td>
                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_purchases))"/></strong></td>
                        </tr>
                    </table>
                    <!--                    <br/>-->
                    <p style="page-break-after: always;"/>

                    <h3 class="text-center">Expense Statement&#160;(<span t-esc="data['branch_id'][1]"/>)</h3>
                    <!--                    <h5 class="text-center"><span t-esc="data['branch_id'][1]"/></h5>-->

                    <div class="text-left">
                        <p><strong>Date: </strong><span t-esc="data['date_from']" t-options="{'widget': 'date'}"/>  <strong>- </strong><span t-esc="data['date_to']" t-options="{'widget': 'date'}"/></p>
                    </div>
                    <t t-set="grand_total" t-value="0"/>
                    <t t-set="grand_total_other" t-value="0"/>


                    <table class="table table-sm" style="border:1px solid black;">

                        <th style="border:1px solid black;">Date</th>
                        <t t-foreach="accounts" t-as="account">
                            <t t-set="account_total" t-value="get_account_total(account)"/>
                            <t t-if="account_total != 0.0">
                                <th class="text-center" t-esc="account.secondary_name" style="border:1px solid black;"/>
                            </t>
                        </t>
                        <!--                        <th style="border:1px solid black;">F-P</th>-->
                        <!--                        <th style="border:1px solid black;">Bank</th>-->
                        <!--                        <th style="border:1px solid black;">SM</th>-->
                        <th style="border:1px solid black;">Total</th>

                        <t t-foreach="other_expense_accounts" t-as="other_account">
                            <t t-set="account_total" t-value="get_account_total(other_account)"/>
                            <t t-if="account_total != 0.0">
                                <th class="text-center" t-esc="other_expense_accounts.secondary_name" style="border:1px solid black;"/>
                            </t>
                        </t>
                        <th style="border:1px solid black;">Total</th>


                        <!--                        <t t-set="grand_total_fp" t-value="0"/>-->
                        <!--                        <t t-set="grand_total_bank" t-value="0"/>-->
                        <!--                        <t t-set="grand_total_sm" t-value="0"/>-->

                        <t t-foreach="dates" t-as="date">
                            <t t-set="grand_total_date" t-value="0"/>
                            <t t-set="grand_total_expense_date" t-value="0"/>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;">
                                    <span t-esc="date.strftime('%d/%m/%Y')" class="text-nowrap"/>
                                </td>
                                <t t-foreach="accounts" t-as="account">
                                    <t t-set="account_total" t-value="get_account_total(account)"/>
                                    <t t-if="account_total != 0.0">

                                        <t t-set="total" t-value="get_date_data(date, account)"/>

                                        <t t-set="grand_total_date" t-value="grand_total_date + total"/>
                                        <t t-set="grand_total" t-value="grand_total + total"/>

                                        <td class="text-center" style="border:1px solid black;">
                                            <span t-esc="'{0:,.0f}'.format(float(total))"/>
                                        </td>
                                    </t>
                                </t>
                                <td class="text-center" style="border:1px solid black;">
                                    <span t-esc="'{0:,.0f}'.format(grand_total_date)"/>
                                </td>
                                <t t-foreach="other_expense_accounts" t-as="other_account">
                                    <t t-set="o_account_total" t-value="get_account_total(other_account)"/>
                                    <t t-if="o_account_total != 0.0">

                                        <t t-set="total" t-value="get_date_data(date, other_account)"/>

                                        <t t-set="grand_total_expense_date" t-value="grand_total_expense_date + total"/>
                                        <t t-set="grand_total_other" t-value="grand_total_other + total"/>

                                        <td class="text-center" style="border:1px solid black;">
                                            <span t-esc="'{0:,.0f}'.format(float(total))"/>
                                        </td>
                                    </t>
                                </t>
                                <td class="text-center" style="border:1px solid black;">
                                    <span t-esc="'{0:,.0f}'.format(grand_total_expense_date)"/>
                                </td>
                                <!--                                <t t-set="fp_account_total" t-value="get_fp_account_total(date)"/>-->
                                <!--                                <td style="border:1px solid black;">-->
                                <!--                                    <span t-esc="'{0:,.0f}'.format(float(fp_account_total))"/>-->
                                <!--                                </td>-->
                                <!--                                <t t-set="bank_account_total" t-value="get_bank_account_total(date)"/>-->
                                <!--                                <td style="border:1px solid black;">-->
                                <!--                                    <span t-esc="'{0:,.0f}'.format(float(bank_account_total))"/>-->
                                <!--                                </td>-->
                                <!--                                <t t-set="sm_account_total" t-value="get_sm_account_total(date)"/>-->
                                <!--                                <td style="border:1px solid black;">-->
                                <!--                                    <span t-esc="'{0:,.0f}'.format(float(sm_account_total))"/>-->
                                <!--                                </td>-->

                                <!--                                <t t-set="grand_total_fp" t-value="grand_total_fp + fp_account_total"/>-->
                                <!--                                <t t-set="grand_total_bank" t-value="grand_total_bank + bank_account_total"/>-->
                                <!--                                <t t-set="grand_total_sm" t-value="grand_total_sm + sm_account_total"/>-->
                            </tr>
                        </t>
                        <tr>
                            <td><strong>Total</strong></td>
                            <t t-foreach="accounts" t-as="acc">
                                <t t-set="account_total" t-value="get_account_total(acc)"/>
                                <t t-if="account_total != 0.0">
                                    <td class="text-center">
                                        <strong> <span t-esc="'{0:,.0f}'.format(float(account_total))"/></strong>
                                    </td>
                                </t>
                            </t>

                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total))"/></strong></td>
                            <t t-foreach="other_expense_accounts" t-as="other_acc">
                                <t t-set="account_other_total" t-value="get_account_total(other_acc)"/>
                                <t t-if="account_other_total != 0.0">
                                    <td class="text-center">
                                        <strong> <span t-esc="'{0:,.0f}'.format(float(account_other_total))"/></strong>
                                    </td>
                                </t>
                            </t>
                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_other))"/></strong></td>
                            <!--                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_fp))"/></strong></td>-->
                            <!--                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_bank))"/></strong></td>-->
                            <!--                            <td><strong> <span t-esc="'{0:,.0f}'.format(float(grand_total_sm))"/></strong></td>-->
                        </tr>
                    </table>

                    <!--                    <t t-set="grand_total_sale" t-value="0"/>-->
                    <!--                    <t t-set="grand_total_sale_return" t-value="0"/>-->
                    <!--                    <t t-set="grand_total_purchases" t-value="0"/>-->
                    <br/>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;font-size:16px;">

                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Opening Balance</strong></td>
                                        <td class="text-right">
                                            <span t-esc="get_open_balance()"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Total Sale</strong></td>
                                        <td class="text-right">
                                            <span t-esc="grand_total_sale"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Total Return</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'('+str(grand_total_sale_return)+ ')'"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Total Purchase</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'('+str(grand_total_purchases)+ ')'"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Net</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'{0:,.2f}'.format(grand_total_sale- (grand_total_sale_return+ grand_total_purchases))"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Expense</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'('+str(grand_total)+ ')'"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Other Expense</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'('+str(grand_total_other)+ ')'"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Total Expense</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'('+str(grand_total+grand_total_other)+ ')'"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Net Sale</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'{0:,.2f}'.format((grand_total_sale- (grand_total_sale_return+ grand_total_purchases))-grand_total)"/>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;font-size:16px;">
                                    <!--                                    <t t-set="working_days" t-value="get_working_days()"/>-->
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Avg. Sale</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'{0:,.2f}'.format(grand_total_sale/get_working_days())"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Avg. Return</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'{0:,.2f}'.format(grand_total_sale_return/get_working_days())"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td><strong>Return/Sale%</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'{0:,.2f}'.format((grand_total_sale_return/grand_total_sale)*100)"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td><strong>Avg. Exp</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'{0:,.2f}'.format(grand_total/get_working_days())"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Exp/Sale%</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'{0:,.2f}'.format((grand_total/grand_total_sale)*100)"/>
                                        </td>
                                    </tr>

                                    <tr class="border-black o_total">
                                        <td><strong>Closing Balance</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-esc="'{0:,.2f}'.format((((get_open_balance()+grand_total_sale)-grand_total_sale_return)-grand_total_purchases)-(grand_total+grand_total_other))"/>
                                        </td>
                                    </tr>

                                </table>
                                <p style="font-size:18px;">
                                    Note: <span t-esc="get_working_days()"/> Working Days
                                </p>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!--            </t>-->
        </t>
    </template>

</odoo>