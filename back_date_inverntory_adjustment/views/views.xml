<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inventory_form_inherited" model="ir.ui.view">
        <field name="name">stock.inventory.inherited</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="model">stock.inventory</field>
        <field name="priority">100</field>
        <field type="xml" name="arch">
            <xpath expr="//header" position="inside">
                <button string="Update Date" type="object" name="action_update_lines"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="inventory_check" string="Is Backdate"/>
                <field name="back_date"/>
            </xpath>
        </field>
    </record>

